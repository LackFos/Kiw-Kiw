{
  "name": "Mimic - Laravel Backpack Developer Tools",
  "permissions": ["history", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "description": "Mimic is a browser extension to help you easily impersonate other users just one click in your Laravel Backpack Application.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/images/logo_128.png"
  },
  "icons": {
    "16": "assets/images/logo_16.png",
    "48": "assets/images/logo_48.png",
    "128": "assets/images/logo_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
